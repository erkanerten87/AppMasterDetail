<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMasterDetail.Views.ChatHerkesPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackLayout x:Name="spChat" Grid.Row="0" Grid.ColumnSpan="2" BackgroundColor="DarkGray">
                <Label x:Name="lbDate"  Text="" HorizontalOptions="Center" Margin="20" TextColor="White"/>
                <Label x:Name="lbTyping"  Text="" HorizontalOptions="Center" Margin="20" TextColor="White"/>
            </StackLayout>
            <Entry Grid.Column="0" Grid.Row="1" x:Name="ChatTextField" TextChanged="ChatTextField_TextChanged"></Entry>
            <Button Grid.Column="1" Grid.Row="1" Text=">" x:Name="btnChatSend" Clicked="btnChatSend_Clicked"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>             
          